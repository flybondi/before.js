{
  "parser": "babel-eslint",
  "plugins": ["flowtype", "ramda", "react"],
  "extends": [
    "standard",
    "plugin:flowtype/recommended",
    "plugin:react/recommended",
    "plugin:ramda/recommended",
    "plugin:prettier/recommended"
  ],
  "env": {
    "node": true,
    "jest": true
  },
  "rules": {
    "semi": [2, "always"],
    "no-extra-semi": 2,
    "react/display-name": 0
  }
}
