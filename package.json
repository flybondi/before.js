{
  "name": "@flybondi/before.js",
  "version": "1.0.1",
  "description": "Enables data fetching with any React SSR app that uses React Router 4",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "author": "Flybondi <dev@flybondi.com>",
  "license": "UNLICENSED",
  "keywords": [
    "react",
    "react ssr",
    "react-router",
    "before",
    "async"
  ],
  "scripts": {
    "build.code": "cross-env NODE_ENV=production rollup -c",
    "build": "run-s build.*",
    "coverage": "cat .coverage/lcov.info | codacy-coverage --username nelson-flybondi --projectName before.js",
    "flow.coverage": "flow coverage",
    "flow.install": "flow-typed install --ignoreDeps dev",
    "flow.start": "flow start",
    "flow.status": "flow status",
    "flow.stop": "flow stop",
    "lint": "eslint src/",
    "prepublishOnly": "yarn build",
    "prettier": "prettier --write src/",
    "report": "run-s test.coverage coverage",
    "start": "NODE_OPTIONS=\"-r flow-remove-types/register\" serverless offline start --environment development",
    "test.coverage": "yarn test --coverage --coverageDirectory .coverage",
    "test.watch": "jest --watchAll",
    "test": "jest"
  },
  "peerDependencies": {
    "react": ">=16",
    "react-dom": ">= 16",
    "react-router-dom": "^4.3.1"
  },
  "dependencies": {
    "ramda": "^0.25.0",
    "react-helmet": "^5.2.0",
    "serialize-javascript": "^1.5.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-external-helpers": "^7.0.0",
    "@babel/preset-flow": "^7.0.0",
    "@babel/runtime": "^7.0.0",
    "@commitlint/config-conventional": "^7.1.1",
    "babel-core": "^7.0.0-0",
    "babel-eslint": "^9.0.0",
    "babel-jest": "^23.4.2",
    "babel-preset-react-app": "^4.0.0-next.a671462c",
    "codacy-coverage": "^3.0.0",
    "commitlint": "^7.1.1",
    "cross-env": "^5.2.0",
    "enzyme": "^3.5.0",
    "enzyme-adapter-react-16": "^1.3.1",
    "eslint": "^5.5.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-flowtype": "^2.50.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-promise": "^4.0.0",
    "eslint-plugin-ramda": "^2.5.1",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-standard": "^4.0.0",
    "flow-bin": "^0.80.0",
    "flow-remove-types": "^1.2.3",
    "flow-typed": "^2.5.1",
    "husky": "^1.0.0-rc.13",
    "jest": "^23.5.0",
    "lint-staged": "^7.2.2",
    "npm-run-all": "^4.1.3",
    "object-assign": "^4.1.1",
    "prettier": "^1.14.2",
    "raf": "^3.4.0",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-router-dom": "^4.3.1",
    "rollup": "^0.65.0",
    "rollup-plugin-babel": "^4.0.2",
    "rollup-plugin-bundle-size": "^1.0.2",
    "rollup-plugin-clean": "^1.0.0",
    "rollup-plugin-commonjs": "^9.1.6",
    "rollup-plugin-flow": "^1.1.1",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-ramda": "^1.0.5",
    "run-sequence": "^2.2.1",
    "whatwg-fetch": "^2.0.4"
  },
  "lint-staged": {
    "src/**/*.{js,json}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "run-s test"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "jest": {
    "verbose": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,mjs}"
    ],
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "babel-jest",
      "^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/config/file-transform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/config/enzyme.config.js",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "\\.css$": "identity-obj-proxy"
    },
    "testURL": "http://localhost"
  }
}
